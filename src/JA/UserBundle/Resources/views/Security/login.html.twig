{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h3>Connexion</h3>
    <div class="">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="form-group">
                <label for="username" class="control-label">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" class="form-control"  name="_username" value="{{ last_username }}" required="required" />
            </div>
            <div class="form-group">
                <label for="password" class="control-label">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" class="form-control"   name="_password" required="required" />
            </div>
            <div class="form-group">
                <input type="checkbox" class="normal" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
            <div class="form-group">
                <input class="btn btn-default" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>


        </form>
    </div>
{% endblock fos_user_content %}
